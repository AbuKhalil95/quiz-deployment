# Railway Production Environment Variables
# Copy these to Railway's environment variables

# Application
APP_NAME=Laravel
APP_ENV=production
APP_KEY=                    # Leave empty - will be auto-generated on first deploy
APP_DEBUG=false             # Set to true temporarily if debugging
APP_TIMEZONE=UTC
APP_URL=https://quiz-deployment-production.up.railway.app
# Or use Railway's public domain variable:
# APP_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# Note: Proxy trust is configured in bootstrap/app.php via trustProxies()
# Do NOT set TRUSTED_PROXIES environment variable - it causes regex errors in Laravel 11
TRUSTED_PROXIES=**
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

# PHP
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error             # Use 'error' for production, 'debug' for debugging

# Database (MySQL from Railway)
# Option 1: Use Railway's MySQL URL (simplest - Laravel will parse it automatically)
DB_URL=${{MYSQL_URL}}
# Or use public URL: DB_URL=${{MYSQL_PUBLIC_URL}}
DB_CONNECTION=mysql

# Option 2: Use individual variables (if URL doesn't work)
# DB_CONNECTION=mysql
# DB_HOST=${{MYSQLHOST}}
# Or use: DB_HOST=${{RAILWAY_PRIVATE_DOMAIN}}
# DB_PORT=${{MYSQLPORT}}
# Or use: DB_PORT=3306
# DB_DATABASE=${{MYSQLDATABASE}}
# Or use: DB_DATABASE=${{MYSQL_DATABASE}}
# DB_USERNAME=root
# Note: If MYSQLUSER is empty, use "root" as the username
# DB_PASSWORD=${{MYSQL_ROOT_PASSWORD}}
# Or use: DB_PASSWORD=${{MYSQLPASSWORD}}

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

